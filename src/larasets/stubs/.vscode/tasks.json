{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "‚ùáÔ∏è Optimize",
            "type": "shell",
            "command": "art optimize",
            "presentation": {
                "panel": "dedicated",
                "clear": true,
                "reveal": "always",
                "close": true
            }
        },
        {
            "label": "üîÑÔ∏è Refresh",
            "type": "shell",
            "command": "art migrate:fresh --seed",
            "presentation": {
                "panel": "dedicated",
                "clear": true,
                "reveal": "always",
                "close": true
            }
        },
        {
            "label": "art-serve",
            "type": "shell",
            "command": "art serve",
            "hide": true,
            "presentation": {
                "panel": "dedicated",
                "clear": true,
                "reveal": "silent",
                "close": true
            },
            "problemMatcher": {
                "owner": "artisan",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "source": "artisan",
                "pattern": [
                    {
                        "regexp": "Exception",
                        "message": 1
                    },
                    {
                        "regexp": "^\\s*at\\s*([/\\w]+):(\\d+)$",
                        "file": 1,
                        "line": 2
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^\\s*(INFO)",
                    "endsPattern": "."
                }
            }
        },
        {
            "label": "‚ñ∂Ô∏è Serve",
            "dependsOn": [
                "‚ùáÔ∏è Optimize",
                "art-serve",
                "vite",
                "art-queue",
                "art-schedule"
            ],
            "dependsOrder": "parallel"
        },
        {
            "label": "‚ñ∂Ô∏è Sail",
            "dependsOn": [
                "sail-up",
                "‚ùáÔ∏è Optimize",
                "vite",
                "art-queue",
                "art-schedule"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "‚§µÔ∏è Install",
            "dependsOn": [
                "composer inst",
                "npm install"
            ],
            "dependsOrder": "parallel"
        },
        {
            "label": "sail-up",
            "type": "shell",
            "command": "sail up",
            "presentation": {
                "panel": "dedicated",
                "clear": true,
                "close": true
            },
            "hide": true
        },
        {
            "label": "sail-restart",
            "type": "shell",
            "command": "sail restart",
            "presentation": {
                "panel": "dedicated",
                "clear": true,
                "close": true
            },
            "hide": true
        },
        {
            "label": "sail-down",
            "type": "shell",
            "command": "sail down",
            "presentation": {
                "panel": "dedicated",
                "clear": true,
                "close": true
            },
            "hide": true
        },
        {
            "label": "art-queue",
            "type": "shell",
            "command": "art queue:listen --sleep=3 --tries=3",
            "presentation": {
                "panel": "dedicated",
                "clear": true,
                "reveal": "silent"
            },
            "hide": true,
            "isBackground": true,
            "problemMatcher": {
                "owner": "artisan",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "source": "artisan",
                "pattern": [
                    {
                        "regexp": "Exception",
                        "message": 1
                    },
                    {
                        "regexp": "^\\s*at\\s*([/\\w]+):(\\d+)$",
                        "file": 1,
                        "line": 2
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^\\s*(INFO)",
                    "endsPattern": "."
                }
            }
        },
        {
            "label": "art-schedule",
            "type": "shell",
            "command": "art schedule:work",
            "presentation": {
                "panel": "dedicated",
                "clear": true,
                "reveal": "silent"
            },
            "hide": true,
            "isBackground": true,
            "problemMatcher": {
                "owner": "artisan",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "source": "artisan",
                "pattern": [
                    {
                        "regexp": "Exception",
                        "message": 1
                    },
                    {
                        "regexp": "^\\s*at\\s*([/\\w]+):(\\d+)$",
                        "file": 1,
                        "line": 2
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^\\s*(INFO)",
                    "endsPattern": "."
                }
            }
        },
        {
            "label": "vite",
            "type": "shell",
            "command": "srv dev",
            "presentation": {
                "panel": "dedicated",
                "clear": true,
                "reveal": "always"
            },
            "hide": true,
            "isBackground": true,
            "problemMatcher": {
                "owner": "vite",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "source": "vite",
                "pattern": {
                    "regexp": "^\\s*(Error)\\s*(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^VITE v\\d+\\.\\d+\\.\\d+\\s+ready in \\d+ ms$",
                    "endsPattern": "."
                }
            }
        },
        {
            "label": "üìù Ide Helper",
            "type": "shell",
            "command": "art ide-helper:generate --ansi && art ide-helper:meta --ansi && art ide-helper:models --write --ansi",
            "presentation": {
                "panel": "shared",
                "close": true,
                "reveal": "silent"
            }
        }
    ]
}
