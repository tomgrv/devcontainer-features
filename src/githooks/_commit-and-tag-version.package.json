{
    "scripts": {
        "release": "npx --yes commit-and-tag-version --no-verify --"
    },
    "commit-and-tag-version": {
        "bumpFiles": [
            {
                "filename": "composer.json",
                "type": "json"
            },
            {
                "filename": "package.json",
                "type": "json"
            },
            {
                "filename": "VERSION",
                "type": "plain-text"
            }
        ],
        "types": [
            {
                "section": "Features",
                "type": "feat"
            },
            {
                "section": "Bug Fixes",
                "type": "fix"
            },
            {
                "hidden": true,
                "type": "chore"
            },
            {
                "hidden": true,
                "type": "docs"
            },
            {
                "hidden": true,
                "type": "style"
            },
            {
                "hidden": true,
                "type": "refactor"
            },
            {
                "hidden": true,
                "type": "perf"
            },
            {
                "hidden": true,
                "type": "test"
            }
        ]
    }
}
