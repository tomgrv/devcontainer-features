{
    "name": "@tomgrv/githooks",
    "version": "0.1.0",
    "description": "Git hooks and linting configuration for development workflow",
    "files": [
        "_*.sh",
        "configure-*.sh",
        "install.sh",
        "_*.package.json",
        "stubs/**/*"
    ],
    "bin": {
        "commit-msg": "./_commit-msg.sh",
        "install-plugins": "./_install-plugins.sh",
        "post-checkout": "./_post-checkout.sh",
        "post-merge": "./_post-merge.sh",
        "pre-commit": "./_pre-commit.sh",
        "pre-push": "./_pre-push.sh",
        "prepare-commit-msg": "./_prepare-commit-msg.sh",
        "sync-versions": "./_sync-versions.sh",
        "update-version": "./_update-version.sh"
    },
    "scripts": {
        "configure-cz": "./configure-cz.sh",
        "configure-hooks": "./configure-hooks.sh",
        "lint": "npx --yes lint-staged -p false",
        "postinstall": "./install.sh",
        "release": "npx --yes commit-and-tag-version --no-verify --"
    },
    "dependencies": {
        "@commitlint/cli": "^19.2.2",
        "@commitlint/config-conventional": "^19.2.2",
        "@commitlint/config-workspace-scopes": "^1.0.0",
        "@commitlint/cz-commitlint": "^19.2.0",
        "commit-and-tag-version": "^12.4.1",
        "commitizen": "^4.3.0",
        "git-precommit-checks": "3.1.0",
        "lint-staged": "^15.2.2",
        "prettier": "^3.2.5",
        "prettier-plugin-sh": "^0.14.0"
    },
    "peerDependencies": {
        "@tomgrv/common-utils": "^3.17.0",
        "@tomgrv/gitutils": "^5.26.4"
    },
    "prettier": {
        "insertPragma": true,
        "overrides": [
            {
                "files": "*.yml",
                "options": {
                    "useTabs": true,
                    "tabWidth": 2
                }
            }
        ],
        "plugins": [
            "prettier-plugin-sh"
        ],
        "semi": false,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "es5"
    },
    "commit-and-tag-version": {
        "bumpFiles": [
            {
                "filename": "composer.json",
                "type": "json"
            },
            {
                "filename": "package.json",
                "type": "json"
            },
            {
                "filename": "VERSION",
                "type": "plain-text"
            }
        ],
        "types": [
            {
                "section": "Features",
                "type": "feat"
            },
            {
                "section": "Bug Fixes",
                "type": "fix"
            },
            {
                "hidden": true,
                "type": "chore"
            },
            {
                "hidden": true,
                "type": "docs"
            },
            {
                "hidden": true,
                "type": "style"
            },
            {
                "hidden": true,
                "type": "refactor"
            },
            {
                "hidden": true,
                "type": "perf"
            },
            {
                "hidden": true,
                "type": "test"
            }
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional",
            "@commitlint/config-workspace-scopes"
        ],
        "rules": {
            "subject-case": [
                2,
                "never",
                [
                    "start-case",
                    "pascal-case",
                    "upper-case"
                ]
            ]
        }
    },
    "git-precommit-checks": {
        "rules": [
            {
                "message": "You've got leftover conflict markers",
                "regex": "/^[<>|=]{4,}/m"
            },
            {
                "filter": "(^package\\.json|\\.git-precommit-checks.json)$",
                "message": "You have unfinished devs",
                "nonBlocking": "true",
                "regex": "(?:FIXME|TODO)"
            }
        ]
    },
    "lint-staged": {
        "*.json": [
            "normalize-json -c -w -a -i -f local -l true",
            "npx --yes prettier --write"
        ],
        "*.php": [
            "composer lint"
        ],
        "*.{js,jsx,ts,tsx,md,html,css,vue,yaml,yml}": [
            "npx --yes prettier --write"
        ]
    }
}
