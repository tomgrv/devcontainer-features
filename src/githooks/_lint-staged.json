{
    "scripts": {
        "lint": "npx --yes lint-staged"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,md,html,css,json,vue, yaml, yml}": [
            "npx --yes prettier --write"
        ],
        "*.php": [
            "composer lint"
        ],
        "package.json": [
            "npx --yes sort-package-json"
        ]
    }
}