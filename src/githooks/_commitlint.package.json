{
    "config": {
        "commitizen": {
            "path": "@commitlint/cz-commitlint"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ],
        "rules": {
            "scope-enum": [
                2,
                "always",
                [
                    "deps",
                    "release",
                    "security",
                    "i18n",
                    "config",
                    "add",
                    "remove",
                    "breaking",
                    "modules",
                    "packages",
                    "ui-ux",
                    "api",
                    "model"
                ]
            ],
            "subject-case": [
                2,
                "never",
                [
                    "start-case",
                    "pascal-case",
                    "upper-case"
                ]
            ]
        }
    }
}
