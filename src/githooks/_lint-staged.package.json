{
    "scripts": {
        "lint": "npx --yes lint-staged"
    },
    "lint-staged": {
        "*.php": [
            "composer lint"
        ],
        "*.{js,jsx,ts,tsx,md,html,css,vue,yaml,yml,sh}": [
            "npx --yes prettier --write"
        ],
        "*.json": [
            "normalize-json -c -w -a -i -t 4 -f local -l true"
        ]
    }
}
